{
	"modes": {
        "mouse": {
            "commands": [
                {
                    "name": "Move mouse",
                    "grammar": "move ((up | down) [left | right] | left | right) $number+",
                    "function": "MouseMove"
                },
                {
                    "name": "Click mouse",
                    "grammar": "click [right | double]",
                    "function": "MouseClick"
                },
                {
                    "name": "Mouse grid",
                    "grammar": "grid (one | two | three | four)+",
                    "function": "MouseGrid"
                },
                {
                    "name": "Done using mouse",
                    "grammar": "done",
                    "function": "ExitMode"
                }
            ]
        },
        "program": {
            "commands": [
                {
                    "grammar": "dot",
                    "action": "`.`"
                }
            ]
        }
    },
    "commands": [
        {
            "name": "Voice code control",
            "grammar": "voice code (start | stop)",
            "function": "VoiceCodeMute"
        },
        {
            "name": "Mode loading",
            "grammar": "mode change $dictate",
            "function": "ChangeMode"
        },
        {
            "name": "Mode sibling switch",
            "grammar": "mode switch $dictate",
            "function": "SwitchSiblingMode"
        },
        {
            "name": "Exit mode",
            "grammar": "mode exit",
            "function": "ExitMode"
        }
    ],
    "defines": {
        "number": "(zero | oh | one | two | three | four | five | six | seven | eight | nine)"
    }
}